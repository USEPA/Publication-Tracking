@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center" style="padding-bottom: 30px;">
    <div class="alert alert-secondary" role="alert">Use this form to add a publication to get a new Publication Number, as well as add the publication to the database.</div>
</div>

@using (Html.BeginForm("NewPublication", "Index", FormMethod.Post))
{
    <h3>Requester Information</h3>
    <div class="mb-3">
        <label asp-for="@Model.Publication.PointOfContactName" for="nameInput" class="form-label"></label>
        <input asp-for="@Model.Publication.PointOfContactName" type="text" class="form-control" id="nameInput" aria-describedby="nameHelp"></input>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <label asp-for="@Model.Publication.PointOfContactEmail" for="emailInput" class="form-label"></label>
            <input asp-for="@Model.Publication.PointOfContactEmail" type="email" class="form-control" id="emailInput"></input>
        </div>
        <div class="mb-3 col">
            <label asp-for="@Model.Publication.PointOfContactPhoneNumber" for="phoneInput" class="form-label"></label>
            <input asp-for="@Model.Publication.PointOfContactPhoneNumber" type="tel" class="form-control" id="phoneInput"></input>
        </div>
    </div> 
    <h3>Publication Information</h3>
    <div class="mb-3 col">
        <label asp-for="@Model.Publication.Title" for="titleInput" class="form-label"></label>
        <input asp-for="@Model.Publication.Title" type="text" class="form-control" id="titleInput"></input>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <label>Is this document for internal Agency distribution only?</label>
            <div class="form-check">
                <input asp-for="@Model.Publication.IsInternalOnly" class="form-check-input" type="radio" id="distributionRadioYes" value="true">
                <label class="form-check-label" for="distributionRadioYes">Yes</label>
            </div>
        
            <div class="form-check">
                <input asp-for="@Model.Publication.IsInternalOnly" class="form-check-input" type="radio" id="distributionRadioNo" value="false" checked>
                <label class="form-check-label" for="distributionRadioNo">No</label>
            </div>
        </div>
        <div class="mb-3 col">
            <label>What language is the document written in, if not English?</label>
            <select asp-items="@Html.GetEnumSelectList<Data.Language>()" asp-for="@Model.Publication.Language" class="form-select" id="languageSelect" aria-label="What language is the document written in, if not English?"></select>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <label>Is this publication printed or is going to be printed?</label>
            <div class="form-check">
                <input asp-for="@Model.Publication.IsPrinted" class="form-check-input" type="radio" id="PrintedRadioYes" value="true">
                <label class="form-check-label" for="PrintedRadioYes">Yes</label>
            </div>
        
            <div class="form-check">
                <input asp-for="@Model.Publication.IsPrinted" class="form-check-input" type="radio" id="PrintedRadioNo" value="false" checked>
                <label class="form-check-label" for="PrintedRadioNo">No</label>
            </div>
        </div>
        <div class="mb-3 col">
            <label>Will this be available in digital format?</label>
            <div class="form-check">
                <input asp-for="@Model.Publication.IsDigital" class="form-check-input" type="radio" value="true" id="DigitalRadioYes">
                <label class="form-check-label" for="DigitalRadioYes">Yes</label>
            </div>
        
            <div class="form-check">
                <input asp-for="@Model.Publication.IsDigital" class="form-check-input" type="radio" id="DigitalRadioNo" value="false" checked>
                <label class="form-check-label" for="PrintedRadioNo">No</label>
            </div>
        </div>
    </div>
    
    <div class="mb-3">
        <label asp-for="@Model.Publication.Url" for="urlInput" class="form-label"></label>
        <input asp-for="@Model.Publication.Url" type="url" class="form-control" id="urlInput"></input>
    </div>

    <div class="row">
        <div class="mb-3 col">
            <label>Is this publication an original, or a revision?</label>
            <div class="form-check">
                <input asp-for="@Model.Publication.IsOriginal" class="form-check-input" type="radio" id="OriginalRadioOriginal" value="true" checked></input>
                <label class="form-check-label" for="DigitalRadioYes">Original</label>
            </div>
        
            <div class="form-check">
                <input asp-for="@Model.Publication.IsOriginal" class="form-check-input" type="radio" id="OriginalRadioRevision" value="false"></input>
                <label class="form-check-label" for="PrintedRadioNo">Revision</label>
            </div>
        </div>
        <div class="mb-3 col">
            <label asp-for="@Model.Publication.ExpectedPublicationDate" for="availableInput" class="form-label"></label>
            <input asp-for="@Model.Publication.ExpectedPublicationDate" type="date" class="form-control" id="availableInput"></input>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <label>Responsible Code</label>
            <select asp-items="@Model.ResponsibleCodes" asp-for="@Model.Publication.ResponsibleCode" class="form-select" id="languageSelect"></select>
        </div>
        <div class="mb-3 col">
            <label>Alpha Descriptor</label>
            <select asp-items="@Model.AlphaDescriptors" asp-for="@Model.Publication.AlphaDescriptor" class="form-select" id="languageSelect"></select>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Publication.Comment" for="commentsInput" class="form-label"></label>
        <textarea asp-for="@Model.Publication.Comment" type="text" rows="3" class="form-control" id="commentsInput"></textarea>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary"></input>
    </div>
}