@page
@model PublicationModel
<div class="text-center" style="padding-bottom: 30px;">
    <div class="alert alert-secondary" role="alert"><strong>@Model._publication.DocumentId</strong></div>
</div>
<div class="list-group">
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.Title"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.Title</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.PointOfContactName"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.PointOfContactName</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.PointOfContactOrganization"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.PointOfContactOrganization</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.PointOfContactEmail"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.PointOfContactEmail</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.PointOfContactPhoneNumber"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.PointOfContactPhoneNumber</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.PointOfContactMailCode"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.PointOfContactMailCode</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.ResponsibleCode"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.ResponsibleCode.Code - @Model._publication.ResponsibleCode.Organization</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.AlphaDescriptor"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.AlphaDescriptor.Code - @Model._publication.AlphaDescriptor.Description</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.Url"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.Url</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.Language"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.Language</h5>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.DateRequested"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.DateRequested</h5>
        </div>
    </div>
