            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.IsInternalOnly"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model._publication.IsInternalOnly</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.EnteredBy"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@(Model._publication.EnteredBy == null ? "N/A" : Model._publication.EnteredBy)</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.DateLastModified"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model._publication.DateLastModified</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="list-group-item list-group-item-action flex-column align-items-start">
        <p class="mb-1"><label asp-for="@Model._publication.Comment"></label></p>
        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.Comment</h5>
        </div>
    </div>
</div>
