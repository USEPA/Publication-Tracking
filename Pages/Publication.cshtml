        <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@Model._publication.DateEntered</h5>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.IsOriginal"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model._publication.IsOriginal</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.OriginalId"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@(Model._publication.OriginalId == null ? "N/A" : Model._publication.OriginalId)</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.Revision"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@(Model._publication.Revision == null ? "N/A" : Model._publication.Revision)</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.Year"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model._publication.Year</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.SequenceNumber"></label></p>
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@(Model._publication.SequenceNumber == null ? "N/A" : Model._publication.SequenceNumber)</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
