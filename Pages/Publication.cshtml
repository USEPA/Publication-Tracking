                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model._publication.IsDigital</h5>
                </div>
            </div>
        </div>
        <div class="mb-3 col">
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <p class="mb-1"><label asp-for="@Model._publication.IsPrinted"></label></p>
                <div class="d-flex w-100 justify-content-between">
